{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Settlement Token",
    "description": "The cryptographic proof returned to the Agent to unlock funds.",
    "type": "object",
    "properties": {
        "token_id": {
            "type": "string",
            "format": "uuid"
        },
        "linked_request_id": {
            "type": "string",
            "format": "uuid"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "verifier_signature": {
            "type": "string"
        },
        "status": {
            "enum": [
                "verified",
                "rejected"
            ]
        },
        "settlement_details": {
            "oneOf": [
                {
                    "description": "Crypto Native Settlement",
                    "properties": {
                        "rail": {
                            "const": "L402_LIGHTNING"
                        },
                        "preimage": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "rail",
                        "preimage"
                    ]
                },
                {
                    "description": "Virtual Card Settlement (Visa/Mastercard)",
                    "properties": {
                        "rail": {
                            "enum": [
                                "VISA_TAP",
                                "MASTERCARD_AGENT"
                            ]
                        },
                        "card_token": {
                            "type": "string",
                            "description": "The ephemeral tokenized card reference (PCI-DSS Safe)"
                        },
                        "expiration_ts": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "rail",
                        "card_token",
                        "expiration_ts"
                    ]
                },
                {
                    "description": "Agent-to-Fiat Bridge (Payman)",
                    "properties": {
                        "rail": {
                            "const": "PAYMAN_AI"
                        },
                        "workflow_id": {
                            "type": "string"
                        },
                        "payment_link": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "rail",
                        "workflow_id"
                    ]
                }
            ]
        }
    },
    "required": [
        "token_id",
        "linked_request_id",
        "timestamp",
        "verifier_signature",
        "proof_metadata",
        "status"
    ]
}