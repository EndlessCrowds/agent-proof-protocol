{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Settlement Token",
    "description": "The cryptographic proof returned to the Agent to unlock funds.",
    "type": "object",
    "properties": {
        "token_id": {
            "type": "string",
            "format": "uuid"
        },
        "linked_request_id": {
            "type": "string",
            "format": "uuid"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "verifier_signature": {
            "type": "string"
        },
        "status": {
            "enum": [
                "verified",
                "rejected"
            ]
        },
        "settlement_details": {
            "oneOf": [
                {
                    "description": "Lightning",
                    "properties": {
                        "rail": {
                            "const": "L402_LIGHTNING"
                        },
                        "preimage": {
                            "type": "string"
                        }
                    }
                },
                {
                    "description": "Payman Fiat Bridge",
                    "properties": {
                        "rail": {
                            "const": "PAYMAN_AI"
                        },
                        "workflow_id": {
                            "type": "string"
                        }
                    }
                },
                {
                    "description": "Card Networks",
                    "properties": {
                        "rail": {
                            "enum": [
                                "MASTERCARD_AGENT",
                                "VISA_TAP"
                            ]
                        },
                        "virtual_card_token": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "required": [
        "token_id",
        "linked_request_id",
        "timestamp",
        "verifier_signature",
        "proof_metadata",
        "status"
    ]
}